@page
@model AddModel
@{
    ViewData["Title"] = "Add story";
}

<div>
    <form method="post" asp-page="/Add">
        <div class="form-floating">
            <input id="story-url" name="url" class="form-control" aria-required="true"/>
            <label for="story-url" class="form-label">Story URL</label>
        </div>
        <div class="form-floating">
            <input id="passphrase" name="passphrase" class="form-control" aria-required="true"/>
            <label for="passphrase" class="form-label">Secret passhprase</label>
        </div>
        <div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Update</button>
        </div>
    </form>
</div>