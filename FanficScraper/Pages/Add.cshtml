@page
@model AddModel
@{
    ViewData["Title"] = "Add story";
}

<div>
    <form method="post" asp-page="/Add">
        <div class="mb-3">
            <label for="story-url" class="form-label">Story URL (one per row)</label>
            <textarea id="story-url" name="url" class="form-control" aria-required="true" rows="5"></textarea>
        </div>
        <div class="mb-3">
            <label for="passphrase" class="form-label">Secret passphrase</label>
            <input id="passphrase" name="passphrase" class="form-control" aria-required="true"/>
        </div>
        <div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Update</button>
        </div>
    </form>
</div>