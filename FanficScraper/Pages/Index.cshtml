@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div>
    <form method="post" asp-page="/">
        <div class="form-floating">
            <input id="story-url" name="url" class="form-control" aria-required="true"/>
            <label for="story-url" class="form-label">Story URL</label>
        </div>
        <div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Update</button>
        </div>
    </form>
    
    <ul>
    @{
        @foreach (var story in Model.UpdatedStories)
        {
            <li><a href="/StoryDetails/@story.FileName">@story.StoryName</a> by @story.AuthorName. @(story.IsComplete ? "Complete" : "Incomplete") Updated: @story.StoryUpdated.ToString("yyyy-MM-dd"). <a href="/Story/@story.FileName">Download</a></li>
        }
    }
    </ul>
</div>